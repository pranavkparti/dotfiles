! urxvt

URxvt*geometry:                115x40
!URxvt*font: xft:Liberation Mono:pixelsize=14:antialias=false:hinting=true
URxvt*font: xft:Inconsolata:pixelsize=15:antialias=true:hinting=true
URxvt*boldFont: xft:Inconsolata:bold:pixelsize=15:antialias=false:hinting=true
!URxvt*boldFont: xft:Liberation Mono:bold:pixelsize=15:antialias=false:hinting=true
URxvt*depth:                24
URxvt*borderless: 1
URxvt*scrollBar:            false
URxvt*saveLines:  2000
URxvt.transparent:      true
URxvt*.shading: 10

! Meta modifier for keybindings
!URxvt.modifier: super

!! perl extensions
URxvt.perl-ext:             default,url-select,clipboard

! url-select (part of urxvt-perls package)
URxvt.keysym.M-u:           perl:url-select:select_next
URxvt.url-select.autocopy:  true
URxvt.url-select.button:    2
URxvt.url-select.launcher:  chromium
URxvt.url-select.underline: true

! Nastavuje kopirovani
URxvt.keysym.Shift-Control-V: perl:clipboard:paste
URxvt.keysym.Shift-Control-C:   perl:clipboard:copy

! disable the stupid ctrl+shift 'feature'
URxvt.iso14755: false
URxvt.iso14755_52: false



URxvt*colorUL: #86a2b0

!urxvt color scheme:

! special
*.foreground:   #d2d4ae
*.background:   #0b0b07
*.cursorColor:  #d2d4ae

! black
*.color0:       #13140e
*.color8:       #ca44a1

! red
*.color1:       #1d1d16
*.color9:       #c97a57

! green
*.color2:       #2e2f24
*.color10:      #f367c6

! yellow
*.color3:       #464739
*.color11:      #958dd7

! blue
*.color4:       #646552
*.color12:      #de783d

! magenta
*.color5:       #888a70
*.color13:      #be6b41

! cyan
*.color6:       #b3b594
*.color14:      #a7ac32

! white
*.color7:       #e3e6bd
*.color15:      #a49bf6





!perl extensions
URxvt.perl-ext-common: resize-font,fullscreen

!fullscreen
!URxvt.perl-ext-common: ...,fullscreen,...
URxvt.keysym.F11: perl:fullscreen:switch

